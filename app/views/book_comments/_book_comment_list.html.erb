<table class="table book_comments">
  <tbody>
  <% @book_comments.each do |book_comment| %>
    <tr>
      <td>
        <%= link_to (attachment_image_tag book_comment.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"), user_path(book_comment.user.id) %>
        <%= book_comment.user.name %>
      </td>
      <td>
        <%= book_comment.comment %>
      </td>
      <td>
        <% if book_comment.user == current_user %>
          <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>


<div class="container">
  <div class="row">
    <%= render 'shares/error_message', error: @book %>
  </div>
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'shares/userinfo', user: @user %>
      
      <h2>New book</h2>
      <%= render 'shares/listnewbook', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <%= render 'shares/search_form' %>
      <h2>Books</h2>
      <%= render 'shares/booklist', books: @books %>
    </div>
  </div>
</div>
<table class="table">
  <tbody>
    <tr>
      <th><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></th>
    </tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    <tr>
      <th>
        follows
      </th>
      <th>
        <%= link_to user.follower.count, following_user_path(user) %>
      </th>
    </tr>
    <tr>
      <th>
        followers
      </th>
      <th>
        <%= link_to user.followed.count, followers_user_path(user) %>
      </th>
    </tr>
    <tr>
      <th>
        <%= render 'shares/follow_button', user: user %>
      </th>
    </tr>
    <tr>
      <th>
        <% if current_user != user %>
          <%= link_to 'チャットする', chat_path(user) %>
        <% end %>
      </th>
    </tr>
  </tbody>
</table>

<%= link_to '', edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>